<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="PostgresContext" targetRuntime="MyBatis3">
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin" />
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- Database connection -->
        <jdbcConnection driverClass="org.postgresql.Driver"
                        connectionURL="jdbc:postgresql://localhost:5432/easybank"
                        userId="postgres"
                        password="postgres">
        </jdbcConnection>

        <!-- Java model generators -->
        <javaModelGenerator targetPackage="com.example.easybank.domain"
                           targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- Mapper XML generators -->
        <sqlMapGenerator targetPackage="mapper"
                        targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- Mapper interface generators -->
        <javaClientGenerator type="XMLMAPPER"
                           targetPackage="com.example.easybank.repository"
                           targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- Tables to generate -->
        <table tableName="accounts" domainObjectName="Account">
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
            <columnOverride column="account_holder" property="accountHolder" />
            <columnOverride column="account_type" property="accountType" />
            <columnOverride column="account_number" property="accountNumber" />
            <columnOverride column="balance" javaType="java.math.BigDecimal" />
            <columnOverride column="currency" property="currency" />
        </table>
        
        <table tableName="transactions" domainObjectName="Transaction">
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
            <columnOverride column="source_account_id" property="sourceAccount" javaType="com.example.easybank.domain.Account"/>
            <columnOverride column="destination_account_id" property="destinationAccount" javaType="com.example.easybank.domain.Account"/>
            <columnOverride column="amount" javaType="java.math.BigDecimal"/>
            <columnOverride column="status" javaType="com.example.easybank.domain.TransactionStatus"/>
            <columnOverride column="currency" property="currency"/>
            <columnOverride column="description" property="description"/>
        </table>
    </context>
</generatorConfiguration> 